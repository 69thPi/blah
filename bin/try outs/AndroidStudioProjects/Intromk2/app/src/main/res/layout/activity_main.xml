<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00838F"
    tools:context="com.example.tanmay.intromk2.MainActivity">
    <TextView
        android:id="@+id/welc"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="WELCOME"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="         Pick your\n             emergency . ."
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_below="@id/welc"
        android:background="#FF9800"
        android:textColor="#ffffff"/>
    
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro"
        android:background="#00E676">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/scroll"
        android:layout_alignRight="@+id/welc"
        android:layout_alignEnd="@+id/welc">
        <Button
            android:id="@+id/frac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc71f"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"
            android:text="FRACTURE"
            android:textSize="35sp"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/stroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc71f"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:text="STROKE"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_below="@id/frac"/>
        <Button
            android:id="@+id/poison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc71f"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:text="POISONING"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_below="@id/stroke"/>
        <Button
            android:id="@+id/bleed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc71f"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:text="BLEEDING"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_below="@id/poison"/>
        <Button
            android:id="@+id/uncon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc71f"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:text="UNCONCIOUS"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_below="@id/bleed"/>
        <Button
            android:id="@+id/burn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc71f"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:text="BURNS"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_below="@id/uncon"/>
    </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/sos"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#f50808"
        android:text="S.O.S."
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="90sp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
