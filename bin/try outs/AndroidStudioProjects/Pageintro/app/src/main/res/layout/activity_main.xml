<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tanmay.pageintro.MainActivity"
    android:background="#f7f57a06">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your option.."
        android:textSize="35sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    `<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/fracture"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="FRACTURE"
            android:textSize="35sp"
            android:textAlignment="center"
            android:background="@drawable/roundbutton"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/stroke"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="STROKE"
            android:textAlignment="center"
            android:textSize="35sp"
            android:background="@drawable/roundbutton"
            android:textColor="#ffffff"
            android:layout_below="@id/fracture"/>
        <Button
            android:id="@+id/poisoning"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="POISONING"
            android:textAlignment="center"
            android:textSize="35sp"
            android:background="@drawable/roundbutton"
            android:textColor="#ffffff"
            android:layout_below="@id/stroke"/>
        <Button
            android:id="@+id/burn"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="BURNS"
            android:textAlignment="center"
            android:textSize="35sp"
            android:background="@drawable/roundbutton"
            android:textColor="#ffffff"
            android:layout_below="@id/poisoning"/>
        <Button
            android:id="@+id/bleed"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="BLEEDING"
            android:textSize="35sp"
            android:background="@drawable/roundbutton"
            android:textColor="#ffffff"
            android:layout_below="@id/burn"/>



    </LinearLayout>
</LinearLayout>
