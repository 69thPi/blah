<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:background="#fad123"
    tools:context="com.example.tanmay.mk3.MainActivity">

    <TextView
        android:id="@+id/wel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fad123"
        android:paddingTop="25dp"
        android:text="WELCOME"
        android:textAlignment="center"
        android:layout_margin="0dp"
        android:textSize="45dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#bebb95"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/pick"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Pick Your Emergency"
        android:textAlignment="center"
        android:background="#b4e7c327"
        android:paddingBottom="5dp"
        android:textAppearance="?android:textAppearanceMedium"/>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#9E9E9E">

            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:text="FRACTURE"
                android:background="#FF7043"
                android:onClick="new_win"/>
            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="0dp"
                android:text="STROKE"
                android:background="#FF7043"/>
            <Button
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="0dp"
                android:text="POISONING"
                android:background="#FF7043"/>
            <Button
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="0dp"
                android:text="BLEEDING"
                android:background="#FF7043"/>
            <Button
                android:id="@+id/b5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="0dp"
                android:text="UNCONCIOUS"
                android:background="#FF7043"/>
            <Button
                android:id="@+id/b6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="0dp"
                android:text="BURNS"
                android:background="#FF7043"/>
            <Button
                android:id="@+id/b7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="0dp"
                android:text="VOMITING"
                android:background="#FF7043"/>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/button_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="#D50000"
        android:shadowColor="#fff"
        android:textColor="#fff"
        android:text="S.O.S."
        android:textAlignment="center"
        android:textSize="85sp"/>
</LinearLayout>
